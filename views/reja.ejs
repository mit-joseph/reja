<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body style="background:#b8bbd1;">
  <div class="container py-5">
    <h1 class="display-4 text-center mb-4">REJA VA MAQSADLAR</h1>

    <!-- Input Form -->
    <div class="mx-auto shadow-sm bg-white rounded p-4 mb-4" style="max-width: 1000px;">
      <form id="create-form" action="/create-item" method="POST">
        <div class="d-flex gap-2">
          <input id="create-field" name="reja" type="text" class="form-control"
            placeholder="Yangi harid kiriting..." />
          <button class="btn btn-primary px-4" style="border-radius: 8px;">
            Yangi Reja Qoshish
          </button>
        </div>
      </form>
    </div>

    <!-- Items List (no separation between items) -->
    <ul id="item-list" class="list-group pb-5">
      <% items.map(function(item) { %>
        <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
          <span class="item-text"><%= item.reja %></span>
          <div class="d-flex gap-2">
            <button data-id="<%= item._id %>" class="edit-me btn btn-secondary btn-sm">
              Ozgartirish
            </button>
            <button class="delete-me btn btn-danger btn-sm">Ochirish</button>
          </div>
        </li>
      <% }) %>
    </ul>

    <!-- Delete All Button -->
    <div class="text-center">
      <button id="clean-all" class="btn btn-danger mt-3" style="border-radius: 20px;">
        Hammasini Rejalarni O'chirish
      </button>
    </div>
  </div>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/browser.js"></script>
</body>

</html>